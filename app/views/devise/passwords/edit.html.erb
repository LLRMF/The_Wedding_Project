<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="custom-card bg-light text-dark">
      <div class="card-body">
        <h2 class="text-center mb-4 mt-4">Changer votre mot de passe</h2>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "needs-validation" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>
          <div class="mb-3">
            <%= f.label :password, "Nouveau mot de passe", class: "form-label" %><br />
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> caract√®res minimum)</em><br />
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control bg-white text-dark", required: true %>
          </div>
          <div class="mb-3">
            <%= f.label :password_confirmation, "Confirmer le nouveau mot de passe", class: "form-label" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control bg-white text-dark", required: true %>
          </div>
          <div class="text-center">
            <%= f.submit "Changer mon mot de passe", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
