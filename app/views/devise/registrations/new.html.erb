<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="custom-card bg-light text-dark">
      <div class="card-body">
        <h2 class="text-center mb-4 mt-4">Inscription</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation", novalidate: true }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="row justify-content-center mb-3">
            <div class="col-md-8">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, class: "form-control bg-white text-dark", autofocus: true, autocomplete: "email", required: true, placeholder: "Veuillez indiquer ici votre email" %>
            </div>
          </div>
          <div class="row justify-content-center mb-3">
            <div class="col-md-8">
              <%= f.label :password, class: "form-label" %>
              <% if @minimum_password_length %>
                <em class="text-muted small">(<%= @minimum_password_length %> caractères minimum)</em>
              <% end %>
              <%= f.password_field :password, class: "form-control bg-white text-dark", autocomplete: "new-password", required: true, placeholder: "Veuillez indiquer ici votre mot de passe" %>
            </div>
          </div>
          <div class="row justify-content-center mb-3">
            <div class="col-md-8">
              <%= f.label :password_confirmation, class: "form-label" %>
              <%= f.password_field :password_confirmation, class: "form-control bg-white text-dark", autocomplete: "new-password", required: true, placeholder: "Veuillez confirmez ici votre mot de passe" %>
            </div>
          </div>
          <div class="text-center">
            <%= f.submit "S'inscrire", class: "btn btn-success btn-lg mt-3" %>
          </div>
        <% end %>
        <!-- Nouveaux boutons-->
        <div class="text-center mt-4">
          <br>
          <br>
          Déjà inscrit ? :)
          <br>
          <%= link_to "Se connecter", new_session_path(resource_name), class: "btn btn-primary btn-lg mt-1" %>
          <%# <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
