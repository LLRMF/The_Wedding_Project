<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="custom-card bg-light text-dark">
      <div class="card-body">
        <h2 class="text-center mb-4 mt-4">Connexion</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation", novalidate: true }) do |f| %>
          <div class="row justify-content-center mb-3">
            <div class="col-md-8"> <!-- Réduire la taille du champ email -->
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, class: "form-control bg-white text-dark", autofocus: true, autocomplete: "email", required: true, placeholder: "Veuillez indiquer ici votre email" %>
            </div>
          </div>
          <div class="row justify-content-center mb-3">
            <div class="col-md-8"> <!-- Réduire la taille du champ mot de passe -->
              <%= f.label :password, class: "form-label" %>
              <%= f.password_field :password, class: "form-control bg-white text-dark", autocomplete: "current-password", required: true, placeholder: "Veuillez indiquer ici votre mot de passe" %>
            </div>
          </div>
          <div class="text-center mb-3"> <!-- Centrer la case à cocher et le texte -->
            <% if devise_mapping.rememberable? %>
              <div class="form-check d-inline-block"> <!-- Utiliser d-inline-block pour aligner avec le texte -->
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, class: "form-check-label" %>
              </div>
            <% end %>
          </div>
          <div class="text-center">
            <%= f.submit "Se connecter", class: "btn btn-primary" %>
            <br>
            <%= link_to "Mot de passe oublié ?", new_password_path(resource_name), class: "btn btn-danger btn-sm mt-1" %>
          </div>
        <% end %>
        <!-- Lien d'inscription -->
        <div class="text-center mt-4">
          <br>
          Pas encore inscrit ?
          <br>
          <%= link_to "S'inscrire", new_registration_path(resource_name), class: "btn btn-success btn-lg mt-1" %>
          <br>
        </div>
      </div>
    </div>
  </div>
</div>
